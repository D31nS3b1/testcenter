{
  "name": "iqb-testcenter",
  "version": "13.0.0",
  "iqb": {
    "verona-player-api-versions": {
      "min": 2,
      "max": 4
    },
    "defintionsUrl": "https://raw.githubusercontent.com/iqb-berlin/testcenter-backend"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iqb-berlin/testcenter"
  },
  "private": true,
  "scripts": {
    "lint": "npx eslint frontend/src/**/*.ts frontend/src/**/*.js broadcasting-service/src/**/*.ts scripts/**/*.js",
    "backend:update_specs": "npx gulp --gulpfile=./scripts/update-specs.js updateSpecs",
    "backend:dredd_test": "node_modules/.bin/gulp --gulpfile=./test/dredd/dredd-test.js runDreddTest",
    "frontend:compodoc": "npx compodoc -p frontend/tsconfig.doc.json -s -d ./docs/compodoc-frontend",
    "frontend:update-compodoc": "npx compodoc -p frontend/tsconfig.compodoc.json -d ./docs/dist/compodoc-frontend",
    "broadcasting-service:compodoc": "npx compodoc -p broadcasting-service/tsconfig.doc.json -s -d ./docs/compodoc-frontend",
    "broadcasting-service:update-compodoc": "npx compodoc -p broadcasting-service/tsconfig.compodoc.json -d ./docs/dist/compodoc-broadcasting-service",
    "frontend:unit-test": "npx -w frontend ng test --watch=false",
    "frontend:build": "npx -w frontend ng build",
    "frontend:start": "npx -w frontend ng serve"
  },
  "workspaces": [
    "frontend",
    "broadcasting-service"
  ],
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "plugins": [
          "html"
        ],
        "parserOptions": {
          "ecmaVersion": 2015,
          "sourceType": "module"
        },
        "extends": "@iqb/eslint-config/javascript"
      },
      {
        "files": [
          "*.ts"
        ],
        "extends": "@iqb/eslint-config",
        "parserOptions": {
          "project": "./**/tsconfig.json"
        }
      },
      {
        "files": [
          "*.js"
        ],
        "extends": "@iqb/eslint-config/javascript"
      }
    ]
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@iqb/eslint-config": "1.0.2",
    "dredd": "^14.0.0",
    "eslint-plugin-html": "^6.2.0",
    "fs-extra": "^10.0.1",
    "gulp": "^4.0.2",
    "gulp-yaml-merge": "^2.0.0",
    "ini": ">=1.3.6",
    "is-promise": "^4.0.0",
    "json-pointer": ">=0.6.1",
    "kind-of": ">=6.0.3",
    "minimist": ">=0.2.1",
    "multi-part": "^3.0.0",
    "stream-to-string": "^1.2.0",
    "typescript": "~4.3.4",
    "y18n": ">=3.2.2",
    "yamljs": "^0.3.0"
  }
}
