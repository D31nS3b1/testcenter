{
  "name": "iqb-testcenter",
  "version": "13.0.10",
  "iqb": {
    "verona-player-api-versions": {
      "min": 2,
      "max": 4
    },
    "defintionsUrl": "https://raw.githubusercontent.com/iqb-berlin/testcenter-backend"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iqb-berlin/testcenter"
  },
  "private": true,
  "scripts": {
    "lint": "npx eslint frontend/src/**/*.ts frontend/src/**/*.js broadcasting-service/src/**/*.ts scripts/**/*.js",
    "backend:update-specs": "npx gulp --gulpfile=./scripts/update-specs.js updateSpecs",
    "backend:dredd-test": "node_modules/.bin/gulp --gulpfile=./test/dredd/dredd-test.js runDreddTest",
    "frontend:compodoc": "npx compodoc -p frontend/tsconfig.doc.json -s -d ./docs/compodoc-frontend",
    "frontend:update-compodoc": "npx compodoc -p frontend/tsconfig.compodoc.json -d ./docs/dist/compodoc-frontend",
    "broadcasting-service:compodoc": "npx compodoc -p broadcasting-service/tsconfig.doc.json -s -d ./docs/compodoc-frontend",
    "broadcasting-service:update-compodoc": "npx compodoc -p broadcasting-service/tsconfig.compodoc.json -d ./docs/dist/compodoc-broadcasting-service",
    "frontend:unit-test": "npx -w frontend ng test --watch=false",
    "frontend:code-coverage": "npx -w frontend ng test --watch=false --code-coverage",
    "frontend:build": "npx -w frontend ng build",
    "frontend:start": "npx -w frontend ng serve",
    "broadcasting-service:build": "npx -w broadcasting-service nest build",
    "broadcasting-service:start": "npx -w broadcasting-service nest start --watch",
    "broadcasting-service:unit-test": "npx -w broadcasting-service jest",
    "broadcasting-service:coverage": "npx -w broadcasting-service jest --coverage",
    "create-docs": "npx gulp --gulpfile=./scripts/create-docs.js createDocs",
    "create-interfaces": "npx gulp --gulpfile=./scripts/create-interfaces.js createInterfaces",
    "tag-prepare": "bash -c 'npx gulp --gulpfile=./scripts/tag.js tagPrepare --options $0'",
    "tag-prepare-patch": "npx gulp --gulpfile=./scripts/tag.js tagPrepare --option patch",
    "tag-prepare-test": "npx gulp --gulpfile=./scripts/tag.js tagPrepare --option patch",
    "tag-revoke": "npx gulp --gulpfile=./scripts/tag.js tagRevoke",
    "tag-release": "npx gulp --gulpfile=./scripts/tag.js tagCommitRelease"
  },
  "workspaces": [
    "frontend",
    "broadcasting-service"
  ],
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "plugins": [
          "html"
        ],
        "parserOptions": {
          "ecmaVersion": 2015,
          "sourceType": "module"
        },
        "extends": "@iqb/eslint-config/javascript"
      },
      {
        "files": [
          "*.ts"
        ],
        "extends": "@iqb/eslint-config",
        "parserOptions": {
          "project": "./**/tsconfig.json"
        }
      },
      {
        "files": [
          "*.js"
        ],
        "extends": "@iqb/eslint-config/javascript"
      }
    ]
  },
  "devDependencies": {
    "@bytestream/gulp-archiver": "~2.1.0",
    "@compodoc/compodoc": "^1.1.11",
    "@iqb/eslint-config": "1.0.2",
    "@types/jest": "~27.4.1",
    "dredd": "^14.0.0",
    "eslint-plugin-html": "~6.2.0",
    "fs-extra": "^10.0.1",
    "gulp": "^4.0.2",
    "gulp-download2": "~1.1.0",
    "gulp-replace": "~1.1.3",
    "gulp-tap": "~2.0.0",
    "gulp-yaml-merge": "~2.0.0",
    "ini": ">=1.3.6",
    "is-promise": "^4.0.0",
    "json-pointer": ">=0.6.1",
    "kind-of": ">=6.0.3",
    "minimist": ">=0.2.1",
    "multi-part": "^3.0.0",
    "stream-to-string": "^1.2.0",
    "typescript": "~4.3.4",
    "y18n": ">=3.2.2",
    "yamljs": "^0.3.0"
  }
}